<sitemesh>
	<!-- Map default decorator. This shall be applied to all paths if no other 
		paths match. -->
	<!-- <mapping decorator="/default-decorator.html"/> -->

	<!-- Map decorators to path patterns. -->
	<!-- <mapping path="/*" decorator="/WEB-INF/views/decorator/main_decorator.jsp"/> -->
	<mapping path="/" decorator="/WEB-INF/views/decorator/main_decorator.jsp" />
	<mapping path="/book/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/movie/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/qboard/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/gboard/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/tboard/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/comic/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />
	<mapping path="/notice/*" decorator="/WEB-INF/views/decorator/my_decorator.jsp" />

